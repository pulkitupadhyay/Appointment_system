                            function addSlot(event) {
                                const slotsContainer = event.target.closest('.slots');
                                const newSlot = document.createElement('div');
                                newSlot.classList.add('slot');
                                newSlot.innerHTML = `
                                    <input type="time">
                                    <span>-</span>
                                    <input type="time">
                                    <button class="remove">×</button>
                                `;
                            
                                // Append the new slot
                                slotsContainer.appendChild(newSlot);
                            
                                // Reattach the event listener for the remove button
                                newSlot.querySelector('.remove').addEventListener('click', removeSlot);
                            
                                // If this is the first slot, add the "new" button
                                if (slotsContainer.children.length === 1) {
                                    const newButton = document.createElement('button');
                                    newButton.classList.add('new');
                                    newButton.innerHTML = '+';
                                    newButton.addEventListener('click', addSlot);
                                    newSlot.appendChild(newButton);
                                }
                            }
                            
                            function removeSlot(event) {
                                const slot = event.target.closest('.slot');
                                slot.remove();
                            
                                // Ensure the "new" button is with the first slot if there are slots left
                                const slotsContainer = event.target.closest('.slots');
                                if (slotsContainer.children.length > 0) {
                                    const firstSlot = slotsContainer.children[0];
                                    if (!firstSlot.querySelector('.new')) {
                                        const newButton = document.createElement('button');
                                        newButton.classList.add('new');
                                        newButton.innerHTML = '+';
                                        newButton.addEventListener('click', addSlot);
                                        firstSlot.appendChild(newButton);
                                    }
                                }
                            }
                            
                            function toggleAvailability(event) {
                                const dayContainer = event.target.closest('.day');
                                const status = dayContainer.querySelector('.status');
                                const slots = dayContainer.querySelector('.slots');
                                const addSlotButton = dayContainer.querySelector('.add-slot');
                            
