    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
    opacity: 0;
    transform: translateX(-20px);
    transition: opacity 0.5s ease, transform 0.5s ease;
    width: 48%;
    align-self: flex-start;
  }

  .meeting:nth-child(even) {
    align-self: flex-end;
    transform: translateX(20px);
  }

  .meeting.active {
    opacity: 1;
    transform: translateX(0);
  }

  .meeting h2 {
    font-size: 24px;
    margin-bottom: 10px;
    color: #333333;
  }

  .meeting p {
    margin-bottom: 8px;
    color: #666666;
  }

  .meeting a {
    color: #007bff;
    text-decoration: none;
    transition: color 0.3s ease, font-weight 0.3s ease;
  }

  .meeting a:hover {
    color: #1e90ff;
    font-weight: bold;
  }

  .timeline {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 3px;
    background-color: #ccc;
    transform: translateX(-50%);
  }

  .meeting::before {
    content: '';
    position: absolute;
    width: 12px;
    height: 12px;
    background-color: #007bff;
    border-radius: 50%;
    left: -32px;
    top: 50%;
    transform: translateY(-50%);
    z-index: -1;
  }

  .meeting:nth-child(odd)::before {
    left: 660px;
  }


  @media (max-width: 768px) {
    .mainDiv_meeting {
      margin: 20px auto;
      padding: 0 10px;
    }

    .meeting,
    .meeting:nth-child(even) {
      width: 100%;
      align-self: center;
      transform: translateX(0);
    }

    .timeline {
      display: none;
    }

    .meeting::before {
      display: none;
    }

    .btn-copy {
      margin-left: -125px;
    }

    .availability {
      right: -7px;
    }
  }
</style>


