                                    addSlotButton.style.display = 'block';
                                } else {
                                    status.textContent = 'Unavailable';
                                    status.classList.remove('available');
                                    status.classList.add('unavailable');
                                    slots.style.display = 'none';
                                    addSlotButton.style.display = 'none';
                                }
                            }
